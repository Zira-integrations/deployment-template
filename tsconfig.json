    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "module": "node20",
    "moduleResolution": "nodenext",
    "target": "es2021"
  },
  "include": ["adapters/*"],
  "allowJs": false
}
